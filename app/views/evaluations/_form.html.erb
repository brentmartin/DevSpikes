<%= form_for @evaluation, :html => { :class => "form-horizontal evaluation" } do |f| %>

  <% if @evaluation.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@evaluation.errors.count, "error") %> prohibited this evaluation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @evaluation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :answer %><br />
    <div class="col-lg-10">
      <%= f.label :answer, "1"%>
      <%= f.radio_button :answer, 1.0 %>
      <br/>
      <%= f.label :answer, "2"%>
      <%= f.radio_button :answer,  2.0 %>
      <br/>
      <%= f.label :answer, "3" %>
      <%= f.radio_button :answer, 3.0 %>
      <br/>
      <%= f.label :answer, "4" %>
      <%= f.radio_button :answer, 4.0 %>
      <br/>
      <%= f.label :answer, "5" %>
      <%= f.radio_button :answer, 5.0 %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                evaluations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
