<%- model_class = Survey -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
  <dd><%= @survey.message %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @survey.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:assessment_id) %>:</strong></dt>
  <dd><%= @survey.assessment_id %></dd>
</dl>

<% @survey.assessment.questions.each do |question| %>
  <dl class="dl-horizontal">
    <dt><strong>Survey Question: </strong></dt>
    <dd><%= question.text %></dd>
    <dt><strong>Response: </strong></dt>
    <dd>
      <span>1</span>
      <input type="radio" name="answers" value= 1>
      <span style="padding-left:1em;">2</span>
      <input type="radio" name="answers" value= 2>
      <span style="padding-left:1em;">3</span>
      <input type="radio" name="answers" value= 3>
      <span style="padding-left:1em;">4</span>
      <input type="radio" name="answers" value= 4>
      <span style="padding-left:1em;">5</span>
      <input type="radio" name="answers" value= 5>
    </dd>
  </dl>
<% end %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              surveys_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_survey_path(@survey), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              survey_path(@survey),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
